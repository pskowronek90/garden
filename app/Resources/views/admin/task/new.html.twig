{% extends 'admin/base/admin.html.twig' %}
{% block doctype %}{{ parent() }}{% endblock %}
{% block head %}{{ parent() }}{% endblock %}
{% block body %}
    {{ parent() }}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Create New Task</h4>
                    </div>
                    <div class="content">
                        <form method="post">
                            <div class="row">

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Title</label>
                                        <input type="text" class="form-control" name="taskName" placeholder="Task Title">

                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea cols="40" name="taskDesc" class="form-control" placeholder="Description"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Planned Date</label>
                                            <input type="date" name="taskDate" class="form-control">
                                        </div>

                                        <div class="form-group">
                                            <select name="plantID">
                                                {% for plant in plants %}
                                                <option value="{{ plant.id }}">
                                                    {{ plant.name }}
                                                </option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success btn-fill pull-left">Create Task</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>


            {% endblock %}


            {% block footer %}
            {{ parent() }}

{% endblock %}