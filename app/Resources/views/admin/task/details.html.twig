{% extends 'admin/base/admin.html.twig' %}
{% block doctype %}{{ parent() }}{% endblock %}
{% block head %}{{ parent() }}{% endblock %}
{% block body %}
    {{ parent() }}



    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Task Details</h4>
                        </div><br>
                        <b>Description:</b> {{ task.description }}<br>
                        <b>Planned Date:</b> {{ task.date|date("d F") }}
                        <b>Status:</b> {{ task.status }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
